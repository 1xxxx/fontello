@font-face {
  font-family: 'icons';
  src: url(<%= asset_path('fontello/src/font/icons.eot') %>);
  src: url(<%= asset_path('fontello/src/font/icons.eot') %>?#iefix) format('embedded-opentype'),
       url(<%= asset_path('fontello/src/font/icons.woff') %>) format('woff'),
       url(<%= asset_path('fontello/src/font/icons.ttf') %>) format('truetype'),
       url(<%= asset_path('fontello/src/font/icons.svg') %>#icons) format('svg');
  font-weight: normal; font-style: normal;
}

[class^="icon-"]:before, [class*=" icon-"]:before {
  font-family: "icons";
  speak: none;
  font-size: 120%;
  opacity: .7;
  text-shadow: 1px 1px 1px rgba(127, 127, 127, 0.3);

  display: inline-block;
  width: 1em;
  margin-right: .2em;
  text-align: center;
  line-height: 1em;

  font-style: normal !important;
  font-weight: normal !important;
}
