/*global window*/


// vim:syntax=javascript


(function () {
  'use strict';


  var nodeca = window.nodeca = {
    config: {
      fontomas: <%- JSON.stringify(config('fontomas')) %>
    },
    runtime: {
      env:      "<%= env() %>",
      version:  "<%= version() %>"
    }
  };


  (function (c) {
    var log = c && c.log || $.noop;

    nodeca.logger = {};

    _.each(['assert', 'error', 'info', 'debug'], function (level) {
      nodeca.logger[level] = _.bind((c && c[level]) || function () {
        log([level].concat(_.toArray(arguments)));
      }, c || {});
    });
  }(window.console));
}());
