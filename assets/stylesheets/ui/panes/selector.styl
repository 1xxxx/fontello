#selector
  margin-top -10px
  position relative

.src-font-head
  margin-top 10px
  font-size 30px
  line-height 45px

a.font-info
  transition all .5s ease
  vertical-align top
  display inline-block
  margin-top 10px
  margin-right 5px

// Font license & links
//
.icon-mail
.icon-home
.icon-twitter-bird
.icon-github-text
  &:before
    width auto
    opacity 1
    //font-size: 100%
    margin-left .2em
a
  &.icon-mail
  &.icon-home
  &.icon-twitter-bird
  &.icon-github-text
    transition all .5s ease
    color #444
    opacity .4

    &:hover
      opacity 1
.font-details
  margin-left 1em
  margin-right 1em
  font-size 14px

/* Collapser & animations */
a.src-font-name
  color inherit
  text-decoration none
  outline 0 none

.src-font-name:after
  transition all .5s ease
  border-left 6px solid transparent
  border-right 6px solid transparent
  border-bottom 6px solid #333
  content ""
  display inline-block
  height 0
  width 0
  margin-left 10px
  vertical-align middle
  margin-left 8px
  opacity 0

.src-font-head:hover .src-font-name:after
  opacity 1

.src-font-head
  transition all .5s ease

._collapsed .src-font-head
  font-size 18px
  line-height 24px
  opacity .2

._collapsed .src-font-head:hover
  opacity .7

._collapsed .src-font-name:after
  border-bottom 0 none
  border-top 3px solid #333
  border-left 3px solid transparent
  border-right 3px solid transparent
  margin-left 5px

._collapsed a.font-info
  margin-top 2px



#local-files
  /* chrome/opera doesn't trigger events on "display: none;" elements */
  /* so, do some tricks to safely hide element */

  /* display: none; */
  width 0px
  height 0px
  position absolute
  top -100px
  visibility hidden

.font-glyphs
  display inline-block
  user-select none
  margin-bottom 20px

.glyph
  position relative
  float left
  border 1px #ccc solid
  border-radius 6px
  cursor pointer
  text-align center
  width 48px
  height 48px
  line-height 48px
  margin 0 0 8px 8px
  transition all .1s ease
  box-shadow 1px 1px 3px #eee

  &:hover
    background #333
    color #fff
    //opacity .8

  &.selected
    background-color #fffdfd
    border-color #d88
    box-shadow 0 0 0px 2px #d88 inset, 1px 1px 3px 1px #eee

    &:hover
      background #666

  &.ui-selecting
    background-color #eeffee
    border-color #8d8
    //box-shadow 0 0 3px #ada inset

  &.selected.ui-selecting
    background-color #eeffee
    border-color #666
    box-shadow 0 0 3px #666 inset

._3d .glyph
  text-shadow 1px 1px 1px rgba(127, 127, 127, 0.3)
