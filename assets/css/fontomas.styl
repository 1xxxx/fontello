@import nib

html
  overflow-y scroll // remove glitch on step 3, when scroller disappears

body
  padding-top 180px // make the container go all the way to the bottom of the topbar


.gh-ribbon
  display block
  position fixed
  right 0
  top 0
  z-index 10000
  width 149px
  height 149px
  background-image url(asset_data_uri("gh-ribbon.png"))

//======== Social buttons ========
iframe
  &.twitter-follow-button
  &.twitter-share-button
    margin-left 10px
    margin-top 9px

.gplus > div
  top 9px
  position relative

.nav
  .twitter-follow-button
  .twitter-share-button
  .gplus
    transition: opacity .5s ease;
    opacity: .6

.nav:hover
  .twitter-follow-button
  .twitter-share-button
  .gplus
    opacity: 1

//====== warning for disabled JS ===
.js  .jsnotice
  display none


.no-js .jsnotice
  position absolute
  left 30%
  right 30%
  top 90px
  z-index 10000
  font-size 54px
  line-height 81px
  font-weight bold

@import "ui/tabs"
@import "ui/toolbar"
@import "ui/panes/selector"
@import "ui/panes/preview"
@import "ui/panes/codes_editor"
