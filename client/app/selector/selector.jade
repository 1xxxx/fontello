ul#selector-fonts.unstyled(data-bind="css: {_3d: has3DEffect()}, style: {fontSize: fontSize() + 'px'}, foreach: fonts")
  li(data-bind="attr: {id: 'font-id-' + id}", class="ui-selectable")
    h2.src-font-head
      //- a.label.label-important.font-info(href="#") info
      a.src-font-name._collapser(href="#", data-bind="text: fontname")

      small.font-details(data-bind="if: author, text: authorText")
      small.font-details(data-bind="if: license, text: licenseText")

      small.font-details
        a.icon-home(data-bind="if: homepage, attr: {href: homepage}", target="_blank")
        a.icon-mail(data-bind="if: email, attr: {href: emailHref}")
        a.icon-twitter-bird(data-bind="if: twitter, attr: {href: twitter}", target="_blank")
        a.icon-github-text(data-bind="if: github, attr: {href: github}", target="_blank")

      //- no logo, sorry
      //- - if (meta.dribbble)
      //-  a.icon-(href="#{meta.dribbble}", target="_blank") Dribbble

    ul.unstyled.font-glyphs.font-fontello(data-bind="foreach: glyphs")
      li.glyph(data-bind="text: codeAsText, click: toggleSelection, css: selected() ? 'selected' : ''")
