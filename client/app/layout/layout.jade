!!! 5
html.no-js(lang='en', itemscope, itemtype='http://schema.org/WebPage')
  head
    //- http://validator.w3.org  recommendation
    meta(charset='UTF-8')

    title= self.t('app.layout.title')
    meta(name="description", content="Tool to build custom fonts with icons.")

    //- schema.org microformats for g+
    meta(itemprop="name", content="Fontello.com - icon font scissors")
    meta(itemprop="description", content="Easy way to create custom icon font for your site. Select images from large collection, and make webfont pack with one click.")
    meta(itemprop="image", content="/snippet.png")

    //- styles
    link(href=self.asset_path('app.css'), rel="stylesheet")

    //- the fav and touch icons
    link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")

    script(type="text/javascript") !{self.asset_include('loader.js')}

    //- Google Analytics
    script(type="text/javascript")
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-31060395-1']);
      _gaq.push(['_setSiteSpeedSampleRate', 100]);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  body
    .navbar-fixed-top

      //- top menu
      .navbar.navbar-inverse
        .navbar-inner
          .container
            h1.brand= self.t('app.layout.title')
            ul.nav
              li: a(href="https://groups.google.com/group/fontello", target="_blank") Discuss
              li: a(href="https://github.com/fontello/fontello", target="_blank") GitHub
              li: a(href="https://github.com/fontello/fontello/issues", target="_blank")= self.t('app.layout.bugs')
              li: a.twitter-follow-button(href="https://twitter.com/puzrin", data-show-count="false", data-show-screen-name="false")= self.t('app.layout.twitter.follow')
              li: a.twitter-share-button(href="https://twitter.com/share", data-url="http://fontello.com", data-text="#{self.t('app.layout.twitter.text')}")= self.t('app.layout.twitter.share')
              li.gplus
                .g-plusone(data-size="medium")
              li: a.FlattrButton(style="display:none;", rev="flattr;button:compact;", href="http://fontello.com")

      //- top toolbar/tabs
      .container.toolbar
        include @/app/toolbar/toolbar
        include @/app/tabs/tabs

        a.donate(target='_blank', href='https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=575L9QR4V5TNU')= self.t('app.layout.donate')
    != self.content

    //-.gh-ribbon
    //-  a(href="https://github.com/fontello/fontello", target="_blank", title="Fork me on GitHub") Fork me on GitHub

    .jsnotice
      .alert.alert-error= self.t('app.layout.nojs_alert')
