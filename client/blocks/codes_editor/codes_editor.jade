#codes-editor.tab-pane

  #result-font(data-bind='foreach: { data: selectedGlyphs, beforeRemove: hideGlyph }')
    .result-glyph
      .top
        input.char-editable(data-bind='value: customChar')
        a.remove.icon-remove(
          href='#',
          title=self.t('remove'),
          data-bind='click: toggleSelection'
        )

      .center(data-bind='text: charRef, css: { "font-custom_icons": font.fontname == "custom_icons", "font-fontello": font.fontname != "custom_icons" }')

      .bottom
        span.code-prefix U+
        input.code-editable(data-bind='value: customHex', maxlength='5')
