#toolbar.btn-toolbar.clearfix

  .btn-group.search-form.pull-left
    input#search.input-medium.search-query(
      type='text',
      placeholder='search',
      autocomplete='off')
    div.i-search-box
      i.icon-search

  .btn-group.pull-left
    a.search-permalink.btn.btn-link._tip(
      data-bind="visible: searchMode(), attr: { 'href': '/#search=' + searchWord() }",
      title=self.t('search_permalink_help'),
      data-placement='bottom',
      style='display:none'
    )
      i.icon-link

  .btn-group.pull-right
    a#result-download.btn.btn-info.disabled(
      data-on-click='build_font',
      data-bind='css: {disabled: !selectedCount()}')
      i.icon-download(data-bind='visible: !building()')
      i.icon-load.animate-spin(style='display:none', data-bind='visible: building()')
      |  
      = self.t('download')
      |  (
      span#selected-glyphs-count(data-bind='text: selectedCount()')
      | )

  .btn-group.pull-right
    input#result-fontname.input-medium._tip(type='text',
      placeholder=self.t('file_name_placeholder'),
      autocomplete='off',
      title=self.t('file_name_help'),
      data-bind='value: fontName',
      data-placement='bottom')

  .btn-group.pull-right

    a.btn.dropdown-toggle(data-toggle='dropdown', href='#')
      i.icon-settings
      span.caret

    ul.dropdown-menu
      li: a(href='#', data-on-click='import.start')= self.t('menu_import_config')
      li.divider
      li: a(href='#', data-on-click='cmd:reset_selected')= self.t('menu_unselect_all')
      li: a(href='#', data-on-click='cmd:reset_all')= self.t('menu_reset_all')

  .btn-group.pull-right
    #glyph-size-slider
    #glyph-size-value(data-bind="text: fontSize() + 'px'")
