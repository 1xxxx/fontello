.ui-slider
  position relative
  text-align left

  border 1px solid
  border-color #bbb #bbb #ddd #ddd
  border-radius 1em
  background #ddd
  background-image linear-gradient(to bottom, #bbb 0%, #fff 80%, #ddd 100%)

  // fix toolbar fontsize reset
  font-size 14px

.ui-slider .ui-slider-handle
  position absolute
  z-index 2
  width 1.2em
  height 1.2em
  cursor default

  border-radius 2em
  border 1px solid #aaa
  background #aaa
  background-image linear-gradient(to bottom, #fff 0%, #eee 50%, #aaa 100%)

  outline none

  &:after
    position absolute
    content ""
    width .5em
    height .5em
    top .30em
    left .30em
    // background-color #000
    border-radius 1em
    box-shadow 0 0.2em 0.15em #888888 inset



.ui-slider .ui-slider-range
  display none;
